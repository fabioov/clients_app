<mvc:View
	controllerName="clientsapp.controller.View1"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
>
	<Page
		id="page"
		title="{i18n>title}"
	>
		<content>
			<smartTable:SmartTable
				xmlns:smartTable="sap.ui.comp.smarttable"
				xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
				entitySet="ZFS_CDS_CLIENTS"
				id="clientsTable"
				tableType="ResponsiveTable"
				header="{i18n>clients}"
				persistencyKey="SmartTableAnalytical_Explored"
				class="sapUiResponsiveContentPadding"
				app:useSmartToggle="true"
				initiallyVisibleFields="ClientId,ClientName,ClientAddress,ClientPhone"
				enableAutoBinding="true"
				showFullScreenButton="true"
			>
				<Table
					id="Table"
					mode="MultiSelect"
				/>
				<smartTable:customToolbar>
					<OverflowToolbar id="Overflow">
						<ToolbarSpacer id="_IDGenToolbarSpacer1"/>
						<OverflowToolbarButton
							id="_IDGenOverflowToolbarButton0"
							type="Accept"
							icon="sap-icon://print"
							text="{i18n>btn_print}"
							tooltip="{i18n>btn_print}"
							press=".onPrintClient"
						/>
						<OverflowToolbarButton
							id="_IDGenOverflowToolbarButton1"
							type="Accept"
							icon="sap-icon://create-form"
							text="{i18n>btn_create}"
							tooltip="{i18n>btn_create}"
							press=".onCreateClient"
						/>
						<OverflowToolbarButton
							id="_IDGenOverflowToolbarButton2"
							type="Accept"
							icon="sap-icon://edit"
							text="{i18n>btn_edit}"
							tooltip="{i18n>btn_edit}"
							press=".onEditClient"
						/>
						<OverflowToolbarButton
							id="_IDGenOverflowToolbarButton3"
							type="Reject"
							icon="sap-icon://delete"
							text="{i18n>btn_delete}"
							tooltip="{i18n>btn_delete}"
							press=".onDeleteBtnPress"
						/>
					</OverflowToolbar>
				</smartTable:customToolbar>
			</smartTable:SmartTable>
		</content>
	</Page>
</mvc:View>